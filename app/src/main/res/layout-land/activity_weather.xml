<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherActivity">

    <!-- Fragment 1: maksymalnie po lewej stronie -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/basic_weather_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:name="com.example.weatherapp.weather_fragments.BasicWeatherDataFragment"
        app:layout_constraintEnd_toStartOf="@+id/advanced_weather_data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"/>

    <!-- Fragment 2: maksymalnie po prawej stronie -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/advanced_weather_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:name="com.example.weatherapp.weather_fragments.AdvancedWeatherDataFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/basic_weather_data"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/forecast_weather_data"
        app:layout_constraintHorizontal_weight="1"/>

    <!-- Fragment 3: pod drugim fragmentem -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/forecast_weather_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:name="com.example.weatherapp.weather_fragments.ForecastWeatherDataFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/advanced_weather_data"
        app:layout_constraintTop_toBottomOf="@+id/advanced_weather_data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>
